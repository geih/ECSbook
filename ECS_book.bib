  Author                   = {Lee, Tih Shih and Eid, Tore and Mane, Shrikant and Kim, Jung H and Spencer, Dennis D and Ottersen, Ole Petter and de Lanerolle, Nihal C},
  Journal                  = {Acta neuropathologica},
